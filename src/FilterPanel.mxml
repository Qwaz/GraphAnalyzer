<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:local="*">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			import filters.*;
			
			[Bindable]
			private var filterList:ArrayList = new ArrayList([
				C_LTFilter,
				C_NandFilter,
				C_NotFilter,
				C_OrFilter,
				C_AndFilter,
				T_AlwaysFilter,
				A_InvisibleFilter,
			]);
			
			[Bindable]
			private var appliedList:ArrayList = new ArrayList();
			
			private function addFilter():void {
				var selectedFilter:Class = filterList.getItemAt(filterSelector.selectedIndex) as Class;
				appliedList.addItem(new selectedFilter());
			}
		]]>
	</fx:Script>
	
	<mx:VDividedBox width="100%" height="100%" liveDragging="true">
		<s:List id="appliedFilter" verticalScrollPolicy="on" horizontalScrollPolicy="off"
		width="100%" height="70%" dataProvider="{appliedList}" itemRenderer="renderers.AppliedFilterRenderer">
		</s:List>
		
		<s:List id="filterSelector" width="100%" height="30%" dataProvider="{filterList}" itemRenderer="renderers.FilterSelectorRenderer"
		doubleClickEnabled="true" doubleClick="addFilter()">
		</s:List>
	</mx:VDividedBox>
</s:Panel>